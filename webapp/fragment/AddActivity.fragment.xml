<core:FragmentDefinition
    xmlns="sap.uxap"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <ObjectPageLayout
        id="ObjectPageLayout0"
        showTitleInHeaderContent="true"
        alwaysShowContentHeader="false"
        preserveHeaderStateOnScroll="false"
        headerContentPinnable="true"
        isChildPage="true"
        upperCaseAnchorBar="false"
    >
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:Title
                        text="{AppState>/oSelectedActivity/ID}"
                        wrapping="true"
                    />
                </expandedHeading>
                <actions>
                    <m:Button
                        text="Save"
                        icon="sap-icon://save"
                        type="Critical"
                        press="onSaveProjectDetails"
                        visible="{AppState>/oRoleBasesVisiblity/saveBtnVisiblity}"
                    />
                    <m:Button
                        icon="sap-icon://decline"
                        type="Critical"
                        press="onCloseDetailPage"
                    />
                    <m:Button
                        icon="sap-icon://delete"
                        type="Critical"
                        press="onDeleteActivity"
                        visible="{= ${AppState>/oSelectedActivity/ID} &amp;&amp; ${AppState>/oRoleBasesVisiblity/saveBtnVisiblity} ? true : false }"


                    />
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox
                wrap="Wrap"
                fitContainer="true"
                alignItems="Stretch"
            />
        </headerContent>

        <sections>
            <ObjectPageSection title="Activity Details">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <form:SimpleForm
                                id="SimpleFormChange0354"
                                editable="true"
                                layout="ResponsiveGridLayout"
                                title=""
                                labelSpanXL="3"
                                labelSpanL="3"
                                labelSpanM="3"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="4"
                                emptySpanL="4"
                                emptySpanM="4"
                                emptySpanS="0"
                                columnsXL="1"
                                columnsL="1"
                                columnsM="1"
                                singleContainerFullSize="false"
                            >
                                <form:content>
                                    <m:Label
                                        text="Activity Name"
                                        required="true"
                                    />
                                    <m:Input
                                        id="aname"
                                        value="{AppState>/oSelectedActivity/name}"
                                    />
                                    <m:Label text="Description" />
                                    <m:Input
                                        id="adesc"
                                        value="{AppState>/oSelectedActivity/description}"
                                    />

                                    <m:Label
                                        text="Planned Start"
                                        required="true"
                                    />
                                    <m:DatePicker
                                        id="astart"
                                        afterValueHelpClose="onChangeDate"
                                        value="{AppState>/oSelectedActivity/planned_start}"
                                    />

                                    <m:Label
                                        text="Planned Finish"
                                        required="true"
                                    />
                                    <m:DatePicker
                                        id="aend"
                                        afterValueHelpClose="onChangeDate"
                                        value="{AppState>/oSelectedActivity/planned_finish}"
                                    />

                                    <m:Label text="Forecasted Start" />
                                    <m:DatePicker
                                        value="{AppState>/oSelectedActivity/fore_act_start}"
                                        editable="false"
                                    />

                                    <m:Label text="Forecasted Finish" />
                                    <m:DatePicker
                                        value="{AppState>/oSelectedActivity/fore_act_finish}"
                                        editable="false"
                                    />
                                    <m:Label text="Actual Start" />
                                    <m:DatePicker
                                        value="{AppState>/oSelectedActivity/act_start}"
                                        editable="false"
                                    />

                                    <m:Label text="Actual Finish" />
                                    <m:DatePicker
                                        value="{AppState>/oSelectedActivity/act_finish}"
                                        editable="false"
                                    />

                                    <m:Label text="Progress Increment %" required="true"/>
                                    <m:Input
                                    id="apctweight"
                                        value="{AppState>/oSelectedActivity/pct_weight}"
                                        editable="true"
                                    />

                                    <!-- <m:Label text="pct_complete %" />
                                    <m:Input
                                        value="{AppState>/oSelectedActivity/pct_complete}"
                                        editable="true"
                                    /> -->

                                    <m:Label text="State" />
                                    <m:Input
                                        value="{AppState>/oSelectedActivity/state}"
                                        editable="false"
                                    />
                                    <m:Label text="Preceding Activity" />
                                    <m:ComboBox
                                        id="aPActivity"
                                        showSecondaryValues="true"
                                        selectedKey="{AppState>/oSelectedActivity/precedingActivityID}"
                                        items="{
					path: 'AppState>/aActivity'
				}"
                                    >
                                        <core:ListItem
                                            key="{AppState>ID}"
                                            text="{AppState>name}"
                                        />
                                    </m:ComboBox>
                                    <m:Label
                                        text="Responsible"
                                        required="true"
                                    />

                                    <!-- <m:Input value="Framsys Roadmap" editable="false"/> -->
                                    <m:ComboBox
                                        id="aowner"
                                        showSecondaryValues="true"
                                        selectedKey="{AppState>/oSelectedActivity/responsible_ID}"
                                        items="{
					path: '/Employee'
				}"
                                    >
                                        <core:ListItem
                                            key="{ID}"
                                            text="{name}"
                                        />
                                    </m:ComboBox>
                                    <!-- <m:RangeSlider showAdvancedTooltip="true" min="0" max="100" enableTickmarks="true" class="sapUiSmallMarginBottom">
			<m:ResponsiveScale tickmarksBetweenLabels="5"/>
		</m:RangeSlider> -->
                                </form:content>
                            </form:SimpleForm>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</core:FragmentDefinition>