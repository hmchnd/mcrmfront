<core:FragmentDefinition
    xmlns="sap.uxap"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <ObjectPageLayout
        id="ObjectPageLayout"
        showTitleInHeaderContent="true"
        alwaysShowContentHeader="false"
        preserveHeaderStateOnScroll="false"
        headerContentPinnable="true"
        isChildPage="true"
        upperCaseAnchorBar="false"
    >
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:Title
                        text="{AppState>/oSelectedProject/ID}"
                        wrapping="true"
                    />
                </expandedHeading>
                <actions>
                    <m:Button
                        text="Manage Activities"
                        type="Emphasized"
                        press="onManageActivity"
                    />
                    <m:Button
                        text="Save"
                        icon="sap-icon://save"
                        type="Emphasized"
                        press="onSaveTask"
                    />
                    <m:Button
                        icon="sap-icon://decline"
                        type="Emphasized"
                        press="onCloseDetailPage"
                    />
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox
                wrap="Wrap"
                fitContainer="true"
                alignItems="Stretch"
            >
                <f:Avatar
                    src="sap-icon://idea-wall"
                    showBorder="false"
                    displaySize="XS"
                    displayShape="Circle"
                    imageFitType="Contain"
                />
            </m:FlexBox>
        </headerContent>

        <sections>
            <ObjectPageSection title="Task Details">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <form:SimpleForm
                                id="SimpleFormChange354"
                                editable="true"
                                layout="ResponsiveGridLayout"
                                title=""
                                labelSpanXL="3"
                                labelSpanL="3"
                                labelSpanM="3"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="4"
                                emptySpanL="4"
                                emptySpanM="4"
                                emptySpanS="0"
                                columnsXL="1"
                                columnsL="1"
                                columnsM="1"
                                singleContainerFullSize="false"
                            >
                                <form:content>
                                    <m:Label text="Task Name" />
                                    <m:Input
                                        id="pname"
                                        value="{AppState>/oSelectedTask/name}"
                                    />

                                    <m:Label text="Task Description" />
                                    <!-- <m:Input value="Framsys Roadmap" editable="false"/> -->
                                    <m:TextArea value="{AppState>/oSelectedTask/description}" />

                                    <m:Label text="Project Planned Start" />
                                    <m:DatePicker
                                        id="pstart"
                                        value="{AppState>/oSelectedTask/planned_start}"
                                    />

                                    <m:Label text="Project Planned End" />
                                    <m:DatePicker
                                        id="pend"
                                        value="{AppState>/oSelectedTask/planned_finish}"
                                    />

                                    <m:Label text="Forecasted / Actual Start" />
                                    <m:DatePicker
                                        editable="false"
                                        value="{AppState>/oSelectedTask/fore_act_start}"
                                    />

                                    <m:Label text="Forecasted / Actual End" />
                                    <m:DatePicker
                                        editable="false"
                                        value="{AppState>/oSelectedTask/fore_act_finish}"
                                    />

                                    <m:Label text="Task Progress" />
                                    <m:Input value="{AppState>/oSelectedTask/pct_complete}" />

                                    <m:Label text="Phase" />
                                    <m:ComboBox
                                        showSecondaryValues="true"
                                        selectedKey="{AppState>/oSelectedTask/phase_ID}"
                                        items="{
					path: '/TemplatePhase'
				}"
                                    >
                                        <core:ListItem
                                            key="{ID}"
                                            text="{name}"
                                        />
                                    </m:ComboBox>
                                    <m:Label text="Area" />
                                    <m:ComboBox
                                        showSecondaryValues="true"
                                        selectedKey="{AppState>/oSelectedTask/area_ID}"
                                        items="{
					path: '/TemplateArea'
				}"
                                    >
                                        <core:ListItem
                                            key="{ID}"
                                            text="{name}"
                                        />
                                    </m:ComboBox>
                                </form:content>
                            </form:SimpleForm>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</core:FragmentDefinition>
