<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">
	<Dialog title="Provide New Project Detail" contentWidth="500px">
		<content>

			<f:Form id="FormChange354" editable="true">
				<f:title>
					<core:Title text="Project details" />
				</f:title>
				<f:layout>
					<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="Project Name">
								<f:fields>
									<Input value="" id="name"/>
								</f:fields>
							</f:FormElement>

							<f:FormElement label="Project Description">
								<f:fields>
									<TextArea value="" id="desc" cols="20" rows="3"/>
								</f:fields>
							</f:FormElement>

							<f:FormElement label="Department">
								<f:fields>
									<ComboBox id="department" items="{
				path: 'projectLocalModel>/Department'
			}">
										<core:Item key="{projectLocalModel>key}" text="{projectLocalModel>text}"/>
									</ComboBox>
								</f:fields>
							</f:FormElement>

							<f:FormElement label="Phase">
								<f:fields>
									<MultiComboBox id="phase" showClearIcon="true" showSelectAll="true" items="{
				path: 'projectLocalModel>/Phase'
			}">
										<core:Item key="{projectLocalModel>key}" text="{projectLocalModel>text}"/>
									</MultiComboBox>
								</f:fields>
							</f:FormElement>

							<f:FormElement label="Area">
								<f:fields>
									<MultiComboBox id="area" selectionChange="handleSelectionChange" selectionFinish="handleSelectionFinish" items="{
				path: 'projectLocalModel>/Area'
			}">
										<core:Item key="{projectLocalModel>key}" text="{projectLocalModel>text}"/>
									</MultiComboBox>
								</f:fields>
							</f:FormElement>

							<f:FormElement label="Planned Start Date">
								<f:fields>
									<DatePicker  id="plannedStartDate" />
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Planned End Date">
								<f:fields>
									<DatePicker id="plannedEndDate" />
								</f:fields>
							</f:FormElement>

						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</content>
		<beginButton>
			<Button type="Accept" text="Create Project" press="onCreateProject"/>
		</beginButton>
		<endButton>
			<Button type="Reject" text="Cancel" press="onCloseNewProject"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>
