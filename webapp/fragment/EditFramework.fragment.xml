<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:uxap="sap.uxap"
    xmlns:form="sap.ui.layout.form"
>
    <Page>
        <headerContent>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="Delete"
                    visible="false"
                    icon="sap-icon://delete"
                    type="Emphasized"
                    press="onDeleteFramework"
                />
                <Button
                    text="Save"
                    type="Emphasized"
                    visible="false"
                    press="onSaveFrameworkDetails"
                />
                <Button
                    text="Cancel"
                    press="onCloseDetailPage"
                />
            </OverflowToolbar>
        </headerContent>
        <uxap:ObjectPageLayout
            id="ObjectPageLayout1"
            upperCaseAnchorBar="false"
            showAnchorBar="true"
            enableLazyLoading="true"
        >
            <uxap:sections>
                <uxap:ObjectPageSection
                    id="_IDGenObjectPageSection3"
                    showTitle="false"
                >
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection
                            id="_IDGenObjectPageSubSection6"
                            title="Roadmap Detail"
                        >
                            <uxap:blocks>
                                <VBox width="80%">
                                    <form:SimpleForm
                                        editable="true"
                                        layout="ResponsiveGridLayout"
                                    >
                                        <Label text="Name" />
                                        <Input
                                            value="{AppState>/oSelectedFramework/name}"
                                            editable="false"
                                        />
                                        <Label text="Description" />
                                        <TextArea
                                            value="{AppState>/oSelectedFramework/description}"
                                             editable="false"
                                        />
                                    </form:SimpleForm>
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
