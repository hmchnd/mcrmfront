                        <uxap:ObjectPageSubSection
                            id="_IDGenObjectPageSubSection8"
                            title="Area and Phases"
                        >
                            <uxap:blocks>
                                <VBox width="80%">
                                    <Table
                                        id="SimpleTable1"
                                        inset="false"
                                        class="sapUiMediumMarginBottom"
                                        width="100%"
                                        items="{AppState>/oSelectedFramework/templateAreas/results}"
                                    >
                                        <headerToolbar>
                                            <OverflowToolbar>
                                                <ToolbarSpacer />
                                                <Button
                                                    icon="sap-icon://add"
                                                    press="onEditCreateArea"
                                                    visible="false"
                                                />
                                            </OverflowToolbar>
                                        </headerToolbar>
                                        <!-- Define the single column -->
                                        <columns>
                                            <Column>
                                                <header>
                                                    <Label text="Area" />
                                                </header>
                                            </Column>
                                            <Column width="3rem">
                                                <Label text="" />
                                            </Column>
                                        </columns>
                                        <!-- Bind the items -->
                                        <items>
                                            <ColumnListItem>
                                                <cells>
                                                    <TextArea
                                                        value="{AppState>name}"
                                                        cols="40"
                                                         editable="false"
                                                    />
                                                    <Button
                                                        icon="sap-icon://delete"
                                                        press="onDeleteEditArea"
                                                        visible="false"
                                                    />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>

                                    <Table
                                        id="SimpleTable"
                                        inset="false"
                                        width="100%"
                                        items="{AppState>/oSelectedFramework/templatePhases/results}"
                                    >
                                        <headerToolbar>
                                            <OverflowToolbar>
                                                <ToolbarSpacer />
                                                <Button
                                                    icon="sap-icon://add"
                                                    press="onEditCreatePhase"
                                                    visible="false"
                                                />
                                            </OverflowToolbar>
                                        </headerToolbar>
                                        <!-- Define the single column -->
                                        <columns>
                                            <Column>
                                                <header>
                                                    <Label text="Phases" />
                                                </header>
                                            </Column>
                                            <Column width="3rem">
                                                <Label text="" />
                                            </Column>
                                        </columns>
                                        <!-- Bind the items -->
                                        <items>
                                            <ColumnListItem>
                                                <cells>
                                                    <Input
                                                        value="{AppState>name}"
                                                         editable="false"
                                                    />

                                                    <Button
                                                        icon="sap-icon://delete"
                                                        press="onDeleteEditPhase"
                                                        visible="false"
                                                    />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                        <uxap:ObjectPageSubSection
                            id="_IDGenObjectPageSubSection9"
                            title="Tasks"
                        >
                            <uxap:blocks>
                                <VBox width="80%">
                                    <Table
                                        id="editManageTaskTable"
                                        inset="false"
                                        class="sapUiMediumMarginBottom"
                                        width="100%"
                                        items="{AppState>/oSelectedFramework/templateTasks/results}"
                                    >
                                        <headerToolbar>
                                            <OverflowToolbar>
                                                <ToolbarSpacer />
                                                <Button
                                                    icon="sap-icon://add"
                                                    press="onCreateTasks"
                                                    visible="false"
                                                />
                                            </OverflowToolbar>
                                        </headerToolbar>
                                        <columns>
                                            <Column>
                                                <header>
                                                    <Label text="Task Name" />
                                                </header>
                                            </Column>
                                            <Column>
                                                <Label text="Description" />
                                            </Column>
                                            <Column>
                                                <Label
                                                    text="Area"
                                                    required="true"
                                                />
                                            </Column>
                                            <Column>
                                                <Label
                                                    text="Phase"
                                                    required="true"
                                                />
                                            </Column>
                                            <Column >
                                                <Label text="" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem>
                                                <cells>
                                                    <Text
                                                        text="{AppState>name}"
                                                         editable="false"
                                                    />
                                                    <Text
                                                        text="{taskModel>desc}"
                                                         editable="false"
                                                    />
                                                    <Select
                                                        placeholder="Select Area"
                                                         
                                                        change="onAreaChange"
                                                        items="{AppState>/oSelectedFramework/templateAreas/results}"
                                                        
                                                    >
                                                        <core:Item
                                                            text="{AppState>name}"
                                                        />
                                                    </Select>
                                                    <Select
                                                        placeholder="Select Area"
                                                        change="onAreaChange"
                                                        
                                                        items="{AppState>/oSelectedFramework/templatePhases/results}"
                                                    >
                                                        <core:Item
                                                            text="{AppState>name}"
                                                        />
                                                    </Select>
                                                    <Button
                                                        icon="sap-icon://delete"
                                                        visible="false"
                                                        press="onDeleteCreateArea"
                                                    />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </VBox>
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
            </uxap:sections>
        </uxap:ObjectPageLayout>
        <footer>
            <!-- <OverflowToolbar >
    <ToolbarSpacer ></ToolbarSpacer>
    <Button text="Next"></Button>
    <Button text="Cancel" press="onCloseDetailPage"></Button>

    
    </OverflowToolbar> -->
        </footer>
    </Page>
</core:FragmentDefinition>
