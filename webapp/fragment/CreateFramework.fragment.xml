<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
>
<Page >
<headerContent>
<OverflowToolbar >
    <ToolbarSpacer ></ToolbarSpacer>
    <Button text="Save" type="Emphasized" press="onSaveFrameworkDetails" ></Button>
    <Button text="Cancel" press="onCloseDetailPage"></Button>

    
    </OverflowToolbar>
    </headerContent>
    <NavContainer id="wizardNavContainer">
        <pages>
            <Page
                id="wizardContentPage"
                showHeader="false"
            >
           
            
                <content>
                    <Wizard
                        id="CreateProductWizard"
                        class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
                        stepActivated="onStepActivated"
                    >
                        <WizardStep
                            id="ProductTypeStep"
                            title="Roadmap Detail"
                        >
                            <VBox width="80%">
                                <form:SimpleForm
                                    editable="true"
                                    layout="ResponsiveGridLayout"
                                >
                                    <Label
                                        text="Name"
                                        required="true"
                                    />
                                    <Input value="{AppState>/oSelectedFramework/name}" />
                                    <Label
                                        text="Description"
                                        required="true"
                                    />
                                    <TextArea value="{AppState>/oSelectedFramework/description}" />
                                </form:SimpleForm>
                            </VBox>
                        </WizardStep>
                        <WizardStep
                            id="ProductInfoStep"
                            title="Project Type"
                        >
                            <VBox width="80%">
                                <form:SimpleForm
                                    editable="true"
                                    layout="ResponsiveGridLayout"
                                >
                                    <Label
                                        text="Project Type"
                                        required="true"

                                    />
                                    <Select
                                        placeholder="Select Area"
                                        change="onAreaChange"
                                        items="{AppState>/aProjectType}"
                                        id="projectType"

                                    >
                                        <core:Item
                                            text="{AppState>ProjectType}"
                                        />
                                        
                                    </Select>
                                    <Label
                                        text="Industry Type"
                                        required="true"
                                    />
                                    <Select
                                        placeholder="Select Area"
                                        change="onAreaChange"
                                        items="{AppState>/aIndustryType}"
                                        id="industryType"

                                    >
                                         <core:Item
                                            text="{AppState>IndustryType}"
                                        />
                                    </Select>
                                </form:SimpleForm>
                            </VBox>
                        </WizardStep>
                        <WizardStep
                            id="classandarea"
                            title="Area and Phases"
                        >
                            <VBox width="80%">
                                <Table
                                    id="createTable"
                                    inset="false"
                                    class="sapUiMediumMarginBottom"
                                    width="100%"
                                    items="{createAreaModel>/}"
                                >
                                    <headerToolbar>
                                        <OverflowToolbar>
                                            <ToolbarSpacer />
                                            <Button icon="sap-icon://add" press="onCreateArea" />
                                        </OverflowToolbar>
                                    </headerToolbar>
                                    <!-- Define the single column -->
                                    <columns>
                                        <Column>
                                            <header>
                                                <Label text="Area" />
                                            </header>
                                        </Column>
                                        <Column width="3rem">
                                            <Label text="" />
                                        </Column>
                                    </columns>
                                    <!-- Bind the items -->
                                    <items>
                                        <ColumnListItem>
                                            <cells>
                                                <Input value="{createAreaModel>area}" />
                                                <Button
                                                    icon="sap-icon://delete"
                                                    press="onDeleteCreateArea"

                                                />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>

                                <Table
                                    id="phasesTable"
                                    inset="false"
                                    width="100%"
                                    items="{createPhaseModel>/}"
                                >
                                    <headerToolbar>
                                        <OverflowToolbar>
                                            <ToolbarSpacer />
                                            <Button icon="sap-icon://add" press="onCreatePhase" />
                                        </OverflowToolbar>
                                    </headerToolbar>
                                    <!-- Define the single column -->
                                    <columns>
                                        <Column>
                                            <header>
                                                <Label text="Phases" />
                                            </header>
                                        </Column>
                                        <Column width="3rem">
                                            <Label text="" />
                                        </Column>
                                    </columns>
                                    <!-- Bind the items -->
                                    <items>
                                        <ColumnListItem  >
                                            <cells>
                                                <Input value="{createPhaseModel>phase}" />
                                                <Button
                                                    icon="sap-icon://delete"
                                                    press="onDeleteCreatePhase"
                                                />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </VBox>
                        </WizardStep>
                        <WizardStep
                            id="ManageTask"
                            title="Manage Tasks"
                        >
                            <VBox width="80%">
                                <Table
                                    id="ManageTaskTable"
                                    inset="false"
                                    class="sapUiMediumMarginBottom"
                                    width="100%"
                                    items="{createAreaModel>/}"
                                >
                                    <headerToolbar>
                                        <OverflowToolbar>
                                            <ToolbarSpacer />
                                            <Button icon="sap-icon://add" press="onCreateArea" />
                                        </OverflowToolbar>
                                    </headerToolbar>
                                    <!-- Define the single column -->
                                    <columns>
                                        <Column>
                                            <header>
                                                <Label text="Task Name" />
                                            </header>
                                        </Column>
                                        <Column >
                                            <Label text="Description" />
                                        </Column>
                                        <Column >
                                            <Label text="Area" required="true"/>
                                        </Column>
                                        <Column >
                                            <Label text="Phase" required="true"/>
                                        </Column>
                                        <Column width="3rem">
                                            <Label text="" />
                                        </Column>
                                    </columns>
                                    <!-- Bind the items -->
                                    <items>
                                        <ColumnListItem>
                                            <cells>
                                                <Input value="{createAreaModel>area}" />
                                                <Input value="{createAreaModel>area}" />
                                                <Input value="{createAreaModel>area}" />
                                                <Input value="{createAreaModel>area}" />
                                                <Button
                                                    icon="sap-icon://delete"
                                                    press="onDeleteCreateArea"
 
                                                />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>                              
                            </VBox>
                        </WizardStep>
                    </Wizard>
                </content>
                <footer>
                    <!-- <OverflowToolbar>
                        <ToolbarSpacer />
                        <Button
                            text="Cancel"
                            press="onCloseDetailPage"
                        />
                        <Button
                            text="Next"
                            press="handleNext"
                            id="nextButton"
                        />
                    </OverflowToolbar> -->
                </footer>
            </Page>
        </pages>
    </NavContainer>

    <!-- <beginButton>
			<Button type="Accept" text="Create Project" press="onCreateProject"/>
		</beginButton>
		<endButton>
			<Button type="Reject" text="Cancel" press="onCloseNewProject"/>
		</endButton> -->
        </Page>
</core:FragmentDefinition>
