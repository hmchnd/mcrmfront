<mvc:View controllerName="micro.crm.frontend.controller.ManageRoadmap" displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:pf="sap.suite.ui.commons"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:mc="sap.suite.ui.microchart"
    xmlns:fb="sap.ui.comp.filterbar">
    
    <Page id="manageRoadmapPage" >
        <content>
        <f:FlexibleColumnLayout layout="{manageRoadmapLayoutView>/layout}">
                <f:beginColumnPages>
                <Page showHeader="false">
                        <content>
                        <VBox class="stickyPanel">
            <Panel>
                <f:GridList items="{AppState>/aPhase}" >

                    <f:GridListItem press="onCardPress" tooltip="{AppState>description}" type="Active"  class="customGridItem">
                        <VBox class="sapUiTinyMargin">
                            <Title text="{AppState>name}" wrapping="true" />
                            <Label text="{path:'AppState>planned_start', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd MMM yyyy' }}-{path:'AppState>planned_finish', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd MMM yyyy' }}" wrapping="true" />
                        </VBox>
                        <!-- <pf:MicroProcessFlow content="{AppState>milestone}">
                            <pf:content>
                                <pf:MicroProcessFlowItem state="Warning" title="{AppState>name}" press="onClickMilestone"/>
                               
                            </pf:content>
                        </pf:MicroProcessFlow> -->
                         <HBox items="{AppState>milestone}" class="sapUiTinyMargin" wrap="Wrap">
                                <Button type="Critical" tooltip="{AppState>name}" icon="sap-icon://flag" press="onClickMilestone" />
                               </HBox>
                    </f:GridListItem>

                  
                </f:GridList>
            </Panel>
            </VBox>

            <VBox id="panelContainer" class="sapUiTinyMargin"/>
                 </content>
                    </Page>
                </f:beginColumnPages>

                <f:midColumnPages>
                    <core:Fragment
                        fragmentName="micro.crm.frontend.fragment.AddTaskDialog"
                        type="XML"
                    />
                </f:midColumnPages>

                <f:endColumnPages />
            </f:FlexibleColumnLayout>
        </content>
    </Page>
</mvc:View>