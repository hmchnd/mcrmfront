<mvc:View
    controllerName="micro.crm.frontend.controller.NotFound"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <MessagePage showHeader="false" icon="sap-icon://notification" text="Page Not Found" description="Please Select a Project First.">
        <buttons>
            <Button id="roadmapButton" text="Go to Roadmap" press="onBackToDashboard" type="Critical" visible="{AppState>/notFoundBtnVisiblityRoadmap}" />
            <Button id="kanbanButton" text="Go to Kanban" press="onBackToKanban" type="Critical" visible="{AppState>/notFoundBtnVisiblityKanban}" />
        </buttons>
    </MessagePage>
    </mvc:View>