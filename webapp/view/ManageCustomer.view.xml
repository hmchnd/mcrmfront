<mvc:View
	height="100%"
	controllerName="micro.crm.frontend.controller.ManageCustomer"
	xmlns:mvc="sap.ui.core.mvc"
	 xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
	xmlns="sap.m"   xmlns:l="sap.ui.layout"  xmlns:grid="sap.ui.layout.cssgrid">

	<Page showHeader="false" enableScrolling="true" class="sapUiContentPadding"
		showNavButton="false">

		 <content>
            <f:FlexibleColumnLayout layout="{customerLayoutView>/layout}">
                <f:beginColumnPages>
                    <Page showHeader="false">
                        <content>
                              
                           <Table 
                id="clientTable"
                items="{path: 'AppState>/clients'}">
                <columns>
                    <Column><Text text="Client Name"/></Column>
                    <Column><Text text="Client Email"/></Column>
                    <Column><Text text="Client Phone"/></Column>
                    <Column><Text text="Client Address"/></Column>
                    <Column><Text text="Client Country"/></Column>
                    <Column><Text text="Client City"/></Column>
                    <Column><Text text="Client Budget"/></Column>
                </columns>
                <items>
                    <ColumnListItem 
                        type="Navigation" 
                        press="onDetailPress">
                        <cells>
                            <Text text="{AppState>name}"/>
                            <Text text="{AppState>email}"/>
                            <Text text="{AppState>phone}"/>
                            <Text text="{AppState>address}"/>   
                            <Text text="{AppState>country}"/>  <!-- Added Country -->
                            <Text text="{AppState>city}"/>     <!-- Added City -->
                            <Text text="{AppState>budgetrange} {AppState>currency}"/>   <!-- Added Budget -->
                          </cells>
                    </ColumnListItem>
                </items>
            </Table>
                        
                        </content>
                    </Page>
                </f:beginColumnPages>

                <f:midColumnPages>
                    <core:Fragment
                        fragmentName="micro.crm.frontend.fragment.AddClientDetails"
                        type="XML"
                    />
                </f:midColumnPages>

                <f:endColumnPages />
            </f:FlexibleColumnLayout>
        </content>
	</Page>
</mvc:View>
