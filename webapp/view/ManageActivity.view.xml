<mvc:View
    controllerName="framsys.com.framsysfrontend.controller.ManageActivity"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:l="sap.ui.layout"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core"
>
    <Page id="projectTitle">
        <content>
           
            <f:FlexibleColumnLayout layout="{activityLayoutView>/layout}">
                <f:beginColumnPages>
                    <Page showHeader="false">
                        <content>
                            <OverflowToolbar height="3rem">
                            <ToolbarSpacer/>
							<Button text="Show Task" press="onShowTask" class="sapUiLargeMarginBegin"/>
							<!-- <ToolbarSpacer/> -->

						</OverflowToolbar>
                            <ScrollContainer>
                                <l:VerticalLayout
                                    class="sapUiContentPadding equalColumns"
                                    width="100%"
                                >
                                    <FlexBox class="columns">
                                        <!-- New Segment -->
                                        <VBox class="sapUiSmallMargin">
                                            <ObjectStatus
                                                state="Error"
                                                id="new"
                                            />
                                            <f:GridContainer
                                                id="NEW"
                                                width="100%"
                                                snapToRow="true"
                                                items="{
        path: 'AppState>/aActivity',
        filters: [{ path: 'state', operator: 'EQ', value1: 'NEW' }]
    }"
                                            >
                                                <f:layout>
                                                    <f:GridContainerSettings
                                                        rowSize="10px"
                                                        columnSize="400px"
                                                        gap="20px"
                                                        class="sapUiSmallMargin"
                                                    />
                                                </f:layout>

                                                <!-- <layoutData>
                            <FlexItemData
                                growFactor="1"
                                baseSize="0"
                                backgroundDesign="Solid"
                                styleClass="sapUiTinyMargin"
                            />
                        </layoutData> -->

                                                <f:Card
                                                    class="sapUiTinyMargin"
                                                    press="onCardPress"
                                                    semanticRole="ListItem"
                                                >
                                                    <f:header>
                                                        <card:Header
                                                            title="Activity: {AppState>name}"
                                                            subtitle="{subtitle}"
                                                            iconSrc="{iconSrc}"
                                                        />
                                                    </f:header>
                                                    <f:content>
                                                        <VBox
                                                            width="20rem"
                                                            class="sapUiTinyMargin"
                                                        >
                                                            <!-- <Text
                                                                text="Task: Strategic Planning"
                                                            /> -->
                                                            <Text
                                                                text="Owner: {AppState>responsible/name}"
                                                            />
                                                            <Text
                                                                text="Deadline: {AppState>planned_finish}"
                                                            />

                                                            <ProgressIndicator
                                                                percentValue="{AppState>pct_complete}"
                                                                displayValue="{AppState>pct_complete}%"
                                                                state="Error"
                                                            />
                                                        </VBox>
                                                    </f:content>
                                                </f:Card>
                                            </f:GridContainer>
                                        </VBox>

                                        <!-- In Progress Segment -->
                                        <VBox class="sapUiSmallMargin">
                                            <!-- <layoutData>
                        <FlexItemData
                            growFactor="1"
                            baseSize="0"
                            backgroundDesign="Solid"
                            styleClass="sapUiTinyMargin"
                        />
                    </layoutData> -->
                                            <ObjectStatus
                                                state="Warning"
                                                id="inprogress"
                                            />
                                            <f:GridContainer
                                                id="INPROGRESS"
                                                width="100%"
                                                snapToRow="true"
                                                items="{
        path: 'AppState>/aActivity',
        filters: [{ path: 'state', operator: 'EQ', value1: 'INPROGRESS' }]
    }"
                                            >
                                                <f:layout>
                                                    <f:GridContainerSettings
                                                        rowSize="10px"
                                                        columnSize="400px"
                                                        gap="20px"
                                                        class="sapUiSmallMargin"
                                                    />
                                                </f:layout>
                                                <f:Card
                                                    class="sapUiTinyMargin"
                                                    press="onCardPress"
                                                    semanticRole="ListItem"
                                                >
                                                    <f:header>
                                                        <card:Header
                                                            title="Activity: {AppState>name}"
                                                            subtitle="{subtitle}"
                                                            iconSrc="{iconSrc}"
                                                        />
                                                    </f:header>
                                                    <f:content>
                                                        <VBox
                                                            width="20rem"
                                                            class="sapUiTinyMargin"
                                                        >
                                                            <!-- <Text
                                                                text="Task: Strategic Planning"
                                                            /> -->
                                                            <Text
                                                                text="Owner: {AppState>responsible/name}"
                                                            />

                                                            <Text
                                                                text="Deadline: {AppState>planned_finish}"
                                                            />

                                                            <ProgressIndicator
                                                                percentValue="{AppState>pct_complete}"
                                                                displayValue="{AppState>pct_complete}%"
                                                                state="Warning"
                                                            />
                                                        </VBox>
                                                    </f:content>
                                                </f:Card>
                                            </f:GridContainer>
                                        </VBox>

                                        <!-- Completed Segment -->
                                        <VBox class="sapUiSmallMargin">
                                            <!-- <layoutData>
                        <FlexItemData
                            growFactor="1"
                            baseSize="0"
                            backgroundDesign="Solid"
                            styleClass="sapUiTinyMargin"
                        />
                    </layoutData> -->
                                            <ObjectStatus
                                                state="Success"
                                                id="completed"
                                            />
                                            <f:GridContainer
                                                id="COMPLETED"
                                                width="100%"
                                                snapToRow="true"
                                                items="{
        path: 'AppState>/aActivity',
        filters: [{ path: 'state', operator: 'EQ', value1: 'COMPLETED' }]
    }"
                                            >
                                                <f:layout>
                                                    <f:GridContainerSettings
                                                        rowSize="10px"
                                                        columnSize="400px"
                                                        gap="20px"
                                                        class="sapUiSmallMargin"
                                                    />
                                                </f:layout>
                                                <f:Card
                                                    class="sapUiTinyMargin"
                                                    press="onCardPress"
                                                    semanticRole="ListItem"
                                                >
                                                    <f:header>
                                                        <card:Header
                                                            title="Activity: {AppState>name}"
                                                            subtitle="{subtitle}"
                                                            iconSrc="{iconSrc}"
                                                        />
                                                    </f:header>
                                                    <f:content>
                                                        <VBox
                                                            width="20rem"
                                                            class="sapUiTinyMargin"
                                                        >
                                                            <!-- <Text
                                                                text="Task: Strategic Planning"
                                                            /> -->
                                                            <Text
                                                                text="Owner: {AppState>responsible/name}"
                                                            />
                                                            <Text
                                                                text="Deadline: {AppState>planned_finish}"
                                                            />
                                                            <ProgressIndicator
                                                                percentValue="{AppState>pct_complete}"
                                                                displayValue="{AppState>pct_complete}%"
                                                                state="Success"
                                                            />
                                                        </VBox>
                                                    </f:content>
                                                </f:Card>
                                            </f:GridContainer>
                                        </VBox>
                                    </FlexBox>
                                </l:VerticalLayout>
                            </ScrollContainer>
                        </content>
                    </Page>
                </f:beginColumnPages>

                <f:midColumnPages>
                    <core:Fragment
                        fragmentName="framsys.com.framsysfrontend.fragment.AddActivity"
                        type="XML"
                    />
                </f:midColumnPages>

                <f:endColumnPages >
                <core:Fragment
                        fragmentName="framsys.com.framsysfrontend.fragment.AddTaskDialog"
                        type="XML"
                    />
                </f:endColumnPages>
            </f:FlexibleColumnLayout>
        </content>
    </Page>
</mvc:View>
