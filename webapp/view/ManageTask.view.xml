<mvc:View
    controllerName="framsys.com.framsysfrontend.controller.ManageTask"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
    <Page title="Projects / Manage Task">
        <Bar class="customBar">
            <contentLeft />
            <contentMiddle>
                <VBox>
                    <Title
                        text="SAP Activate for RISE with SAP S/4 HANA Cloud Project - Discover Phase"
                        class="sapUiTinyMargin"
                    />
                </VBox>
            </contentMiddle>
            <contentRight>
            <Button icon="sap-icon://delete" press="onDelete" type="Reject" />
                <Button icon="sap-icon://save" press="onSave" type="Emphasized" />
                <Button icon="sap-icon://sys-cancel" press="onCancel" />
                <Button text="Manage Activity" type="Emphasized" press="onManageActivity"></Button>
            </contentRight>
        </Bar>
        <content>
            <VBox class="sapUiResponsiveContentPadding">
                <Panel headerText="Task Details" expandable="false" expanded="true">
                    <f:Form id="FormPage" editable="true">
                        <f:layout>
                            <f:ResponsiveGridLayout
                                labelSpanXL="3"
                                labelSpanL="3"
                                labelSpanM="3"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="1"
                                emptySpanL="1"
                                emptySpanM="1"
                                emptySpanS="0"
                                columnsXL="2"
                                columnsL="2"
                                columnsM="1"
                                singleContainerFullSize="false"
                            />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer>
                                <f:formElements>
                                    <f:FormElement label="Task Name">
                                        <f:fields>
                                            <Input
                                                id="TitleInput"
                                                value="Strategic Planning"
                                                placeholder="Enter task name"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="Task Description">
                                        <f:fields>
                                            <TextArea
                                                id="TaskDescription"
                                                value="Strategic Planning"
                                                rows="3"
                                                placeholder="Enter task description"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="Project">
                                        <f:fields>
                                            <Input
                                                id="TaskInput"
                                                value="SAP Activate for RISE with SAP S/4 HANA Cloud Project"
                                                placeholder="Enter project name"
                                                editable="false"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="Owner">
                                        <f:fields>
                                            <ComboBox
                                                id="OwnerComboBox"
                                                selectedKey="John Doe"
                                            >
                                                <items>
                                                    <core:Item key="John Doe" text="John Doe" />
                                                    <core:Item key="Owner 1" text="Owner 1" />
                                                    <core:Item key="Owner 2" text="Owner 2" />
                                                </items>
                                            </ComboBox>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="Start Date">
                                        <f:fields>
                                            <DatePicker id="StartDatePicker" value="2025-01-10" />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="End Date">
                                        <f:fields>
                                            <DatePicker id="DeadlinePicker" value="2025-05-10" />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                </Panel>
             
            </VBox>
        </content>
        <!-- <footer>
            <Toolbar>
                <ToolbarSpacer />
                
            </Toolbar>
        </footer> -->
    </Page>
</mvc:View>
