<mvc:View
    controllerName="micro.crm.frontend.controller.ManageProducts"
    xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
   
    xmlns:card="sap.f.cards"
    displayBlock="true"
    height="100%">
   <Page showHeader="false" enableScrolling="true" class="sapUiContentPadding"
		showNavButton="false">

		 <content>
            <f:FlexibleColumnLayout layout="{productLayoutView>/layout}">
                <f:beginColumnPages>
                    <Page showHeader="false">
                        <content>
                       <l:Grid
                        id="productsGrid"
                         content="{
                                path: 'AppState>/services',
                                templateShareable: false
                            }"
                        defaultSpan="XL3 L4 M6 S12"
                        class="sapUiSmallMargin">
                       
                        
                        <!-- Product Cards -->
                        <VBox
                            class="sapUiSmallMargin productCard"
                           
                            press=".onProductPress">
                            <HBox justifyContent="SpaceBetween">
                                <Title text="{AppState>name}" level="H3" class="sapUiTinyMarginBottom"/>
                                <ObjectStatus
                                    title="Rate Type"
                                    text="{AppState>rate_type}"
                                    state="Success"/>
                            </HBox>
                            <Text text="Description: {AppState>description}" class="sapUiTinyMarginBottom"/>
                           
                            <ObjectNumber
                                
                                number="{
                                    parts: [
                                        {path: 'AppState>rate'}
                                       
                                    ],
                                    type: 'sap.ui.model.type.Currency',
                                    formatOptions: {
                                        showMeasure: true
                                    }
                                }"
                                unit="{AppState>currency}"
                                state="Success"
                                class="sapUiSmallMarginBottom"/>
                            <HBox justifyContent="End">
                                <Button
                                    icon="sap-icon://edit"
                                    tooltip="Edit"
                                    press=".onEditProduct"
                                    type="Transparent"
                                    class="sapUiTinyMarginEnd"/>
                               
                            </HBox>
                        </VBox>
                    </l:Grid>      
                         
                        </content>
                    </Page>
                </f:beginColumnPages>

                <f:midColumnPages>
                    <core:Fragment
                        fragmentName="micro.crm.frontend.fragment.AddProductDetails"
                        type="XML"
                    />
                </f:midColumnPages>

                <f:endColumnPages />
            </f:FlexibleColumnLayout>
        </content>
	</Page>
</mvc:View>